# Configures the build to use the GCC toolchain in /opt/mongodbtoolchain/v2
import distutils.spawn

# Figure out the full path to 'sh', since it won't be in the
# path after we set ENV.
SHELL=distutils.spawn.find_executable('sh')

# Any process launched by SCons will have only the toolchain
# in the path.
ENV={ 'PATH' : '/opt/mongodbtoolchain/v2/bin' }

# Set the tools here
CC='gcc'
CXX='g++'
OBJCOPY='objcopy'
